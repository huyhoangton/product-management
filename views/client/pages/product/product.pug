extends ../../layouts/default.pug 
include ../../layouts/mixins/box-head.pug
block main 
 .container 
  .row 
   .col-12  
    .box-head 
     +box-head("Product lists")

  .row 
   each item in products
    .col-4
     .product-item 
      .inner-image 
       img(
         src=item.thumbnail
         alt=item.title)
      .inner-content 
       h3.inner-title 
         a(
            href=`/products/${item.id}`
            alt="Anh san pham"
         ) #{item.title}
       .inner-price-new #{item.priceNew} $
       .inner-price-old #{item.price} $
       .inner-discount -#{item.discountPercentage} %

